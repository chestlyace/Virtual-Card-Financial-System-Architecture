          "name": "Create Card",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Card creation successful', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has correct structure', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('success');",
                  "    pm.expect(jsonData.data.card).to.exist;",
                  "    pm.expect(jsonData.data.card.id).to.exist;",
                  "});",
                  "",
                  "pm.test('Save card ID', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('cardId', jsonData.data.card.id);",
                  "});"
